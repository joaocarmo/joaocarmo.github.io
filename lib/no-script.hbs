<style type="text/css">
  body {
    background: none;
  }
  #blackout {
    position: inherit;
    top: inherit;
    left: inherit;
    height: inherit;
    width: inherit;
    background-color: inherit;
  }
  .loader:empty, .loader:empty::before, .loader:empty::after {
    content: "";
    animation: none;
  }
  .loader:empty {
    content: " ";
