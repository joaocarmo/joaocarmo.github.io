{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": ["error", "never"],
    "max-len": ["off"]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@js", "./lib/js"],
          ["@scss", "./lib/scss"],
          ["@img", "./lib/img"]
        ]
      }
    }
}
